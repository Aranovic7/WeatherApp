<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.example.weatherapp.fragments.MainFragment"
        android:label="MainFragment"
        tools:layout="@layout/fragment_main">
        <action
            android:id="@+id/action_mainFragment_to_fragmentWeatherTemperature"
            app:destination="@id/fragmentWeatherTemperature"
            app:enterAnim="@android:anim/slide_in_left"
            app:exitAnim="@android:anim/slide_out_right" />
        <action
            android:id="@+id/action_mainFragment_to_sunFragment"
            app:destination="@id/sunFragment"
            app:enterAnim="@android:anim/slide_in_left"
            app:exitAnim="@android:anim/slide_out_right"/>
    </fragment>
    <fragment
        android:id="@+id/fragmentWeatherTemperature"
        android:name="com.example.weatherapp.fragments.FragmentWeatherTemperature"
        android:label="FragmentWeatherTemperature"
        tools:layout="@layout/fragment_weather_temperature" />
    <fragment
        android:id="@+id/sunFragment"
        tools:layout="@layout/fragment_sun"
        android:name="com.example.weatherapp.fragments.SunFragment"
        android:label="SunFragment" />
</navigation>